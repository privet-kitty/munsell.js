{
  "name": "munsell",
  "version": "1.0.8",
  "author": "Hugo Sansaqua",
  "license": "MPL-2.0",
  "homepage": "https://github.com/privet-kitty/munsell.js",
  "bugs": "https://github.com/privet-kitty/munsell.js/issues",
  "description": "Library for Munsell Color System",
  "keywords": [
    "color",
    "Munsell",
    "colorimetry"
  ],
  "private": false,
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "eslint src test",
    "doc": "typedoc",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "build-mrd": "sbcl --load ./src/fetch-mrd.lisp --quit MRD.ts 5",
    "build-y-to-value": "ts-node src/gen-y-to-value-table",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/privet-kitty/munsell.js.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "d.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/gen-*.ts",
      "!**/index.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.3.5"
  }
}
